pipeline {
    
    agent {
     docker {
       image 'ashi1210/cloudTest-image:vi'
       args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
            }
          }
    
       stages {
        
        stage('Checkout'){
           steps {
                git credentialsId: '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', 
                url: 'https://github.com/ashishdevlopjava/cloudtest.git',
                branch: 'master'
           }
        }

        stage('Build Docker'){
            steps{
                script{
                    sh '''
                    echo 'Buid Docker Image'
                    docker build -t ashi1210/cloud-test .
                    '''
                }
            }
        }

        stage('Push the artifacts'){
           steps{
                script{
                    sh '''
                    echo 'Push to Repo'
                    docker push ashi1210/cloud-test
                    '''
                }
            }
        }
        
               
     }
}
